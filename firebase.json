{
  "hosting": {
    "public": ".next/standalone/public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/_next/static/**",
        "destination": "/_next/static/**"
      },
      {
        "source": "/_next/image/**",
        "function": {
          "name": "nextServer",
          "region": "us-central1",
          "pinTag": true
        }
      },
      {
        "source": "**",
        "function": {
          "name": "nextServer",
          "region": "us-central1",
          "pinTag": true
        }
      }
    ]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "app_next/**/node_modules/**"
      ],
      "runtime": "nodejs20",
      "memory": "512MB"
    }
  ]
}
